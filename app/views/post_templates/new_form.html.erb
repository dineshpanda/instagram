<h1>
  Add a new post
</h1>


<hr>

<form action="/create_post" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :first_name, @post.user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create post
  </button>
</form>

<hr>

<a href="/posts">
  Go back
</a>
